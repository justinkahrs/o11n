{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "o11n",
  "version": "1.0.7",
  "identifier": "com.senna-automation.o11n",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "o11n",
        "resizable": true,
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "public.app-category.developer-tools",
    "createUpdaterArtifacts": true,
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 800,
          "width": 600
        }
      },
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    },
    "targets": "all",
    "icon": [
      "icons/icon.icns"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "o11n"
        ]
      }
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZEMTYzQjk5OTYwNjQ4ODQKUldTRVNBYVdtVHNXYldnbzdkbHBicG9KN2JGdEU0dW1yR3hJSkRxdG1YQWlCcytVaHVaS2JuSTIK",
      "endpoints": [
        "https://github.com/justinkahrs/o11n/releases/latest/download/latest.json"
      ]
    }
  }
}
